@import '../../styles/variables.styl'

.editmodeswitch
  position: absolute
  top: 0
  left: 0
  right: 0
  width: 100%
  height: 60px
  padding: 5px
  margin: 0 auto
  border-bottom-left-radius: 4px
  border-bottom-right-radius: 4px
  border: 1px solid #40606d
  box-shadow: 0 1px 1px #40606d
  background: #365561
  z-index: 1

  &__buttons
    width: 50%
    height: 100%
    display: flex
    margin: 0
    padding: 0
    background-color: #264653
    border: none;
    color: white;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 12px;
    align-items: center
    justify-content: center
    cursor: pointer

  &__selected
    background: #365561
    display: inline-block
    padding: 0 0px

  &:hover
    background: #40606d

  &--disabled
    opacity: 0.5

  &__icon
    fill: #b7b7b7
    margin: 10px

  &:first-child
    border-bottom-left-radius: 3px
    border-top-left-radius: 3px

  &:last-child
    border-bottom-right-radius: 3px
    border-top-right-radius: 3px
