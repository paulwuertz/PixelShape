@import '../../styles/variables.styl'

.sizerangebar
  padding: 5px

  &__label
    padding: 8px
    padding-bottom: 10px
    color: colors['greyblue']

  &__input[type=range]
    margin-left: 10px
    width: 130px
    display: inline-block
    vertical-align: bottom

  &__value
    display: inline-block
    width: 40px
    margin-left: 30px
    margin-bottom: 10px
    font-size: 25px
    font-family: 'robotothin'
    border-bottom: 1px solid silver
    vertical-align: bottom
    color: colors['grey']
    text-align: center

    &.active
      color: colors['seagreen']
      border-color: colors['seagreen']

.defaulttemperaturerangebar
  padding-bottom: 10px

  &__label
    padding: 8px
    padding-bottom: 10px
    color: colors['greyblue']

  &__input[type=range]
    margin-left: 10px
    width: 130px
    display: inline-block
    vertical-align: bottom

  &__text
    display: inline-block
    margin-left: 30px

  &__add
    width: 45px
    height: 45px
    display: inline-block
    border-radius: 50%
    margin-left: 30px
    text-align: center
    vertical-align: bottom
    background: colors['seagreen']
    box-shadow: rgba(0, 0, 0, 0.15) 0px 3px 5px, rgba(0, 0, 0, 0.2) 0px 3px 5px
    transition: background 400ms
    cursor: pointer

    &:hover
      background: colors['seagreenlight']

  input
    width: 40px
    height: 35px
    display: inline-block
    margin-top: 10px
    margin-left: 0px
    padding-bottom: 10px
    padding-left: 0px
    font-family: 'robotothin'
    font-size: 25px
    border-width: 0 0 2px
    color: #fff
    background: colors['blue']
    outline: none
    border-color: initial
    margin: 0;
    -webkit-appearance: none;
    -moz-appearance: textfield;

